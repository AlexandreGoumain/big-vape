# Database
DATABASE_URL="mysql://user:password@localhost:3306/big-vape"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# UploadThing (pour l'upload d'images)
# Créer un compte sur https://uploadthing.com/ et obtenir les clés
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# Email (Resend)
# Créer un compte sur https://resend.com/ et obtenir une clé API
RESEND_API_KEY=""
# Email d'expéditeur (doit être vérifié sur Resend)
EMAIL_FROM="Big Vape <noreply@big-vape.fr>"
# Email de l'administrateur pour les notifications
ADMIN_EMAIL="admin@big-vape.fr"

# Stripe (Paiement)
# Créer un compte sur https://stripe.com/ et obtenir les clés API
# En mode test, utilisez les clés commençant par sk_test_ et pk_test_
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
# Pour le webhook, utiliser Stripe CLI en local: stripe listen --forward-to localhost:3000/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET="whsec_..."

# Application
# URL publique de l'application (pour les redirections Stripe)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
